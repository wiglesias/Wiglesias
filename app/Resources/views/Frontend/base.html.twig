<!DOCTYPE html>
<!--[if lt IE 7]>     <html lang="{{ app.request.locale }}" class="no-js lt-ie9 lt-ie8 lt-ie7"><![endif]-->
<!--[if IE 7]>        <html lang="{{ app.request.locale }}" class="no-js lt-ie9 lt-ie8"><![endif]-->
<!--[if IE 8]>        <html lang="{{ app.request.locale }}" class="no-js lt-ie9"><![endif]-->
<!--[if gt IE 8]><!--><html lang="{{ app.request.locale }}" class="no-js"><!--<![endif]-->
<head>
    <meta name="description" content="{% block metadescription %}{% endblock %}">
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="author" content="www.wiglesias.com">
    <title>{% block title %}{{ main_brand_title }}{% endblock %}</title>
    {% block stylesheets %}
        {% stylesheets filter="cssrewrite,less" '@mycss' %}
        {#<!-- Material Design fonts -->#}
        <link rel="stylesheet" type="text/css" href="{{ asset_url }}"/>
        {% endstylesheets %}
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body id="{% block body_id %}{% endblock %}">
{% block body_class %}{% endblock %}
{# Head content #}
{% block header %}
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation" data-offset="60">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('front_homepage') }}">Wils Iglesias</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                {{ knp_menu_render('top', {currentClass: 'active', allow_safe_labels: true}) }}
            </div>
        </div>
    </nav>
{% endblock %}
{#<!-- Main content -->#}
{% block main %}{% endblock %}
{#<!-- Scroll-Top effect -->#}
<div class="scroll-top-wrapper"><span class="scroll-top-inner"><i class="fa fa-2x fa-chevron-up"></i></span></div>
{#<!-- Footer -->#}
{% block footer %}
    <footer class="page-footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-xs-12 extra-m-bottom">
                    <h3 class="main-text-light">Herramienta</h3>
                    <p class="main-text-light"><em>Utilizo el framework Symfony para mis proyecto. "Symfony" es una marca registrada de Fabien Potencier.</em></p>
                    <a href="http://symfony.com" target="_blank">
                        <svg height="70" width="70" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                            <image height="70" width="70" class="navbar-logo" xlink:href="{{ asset('bundles/app/img/sf-white.svg') }}" alt="Symfony"></image>
                        </svg>
                    </a>
                </div>
                <div class="col-md-3 col-xs-12 extra-m-bottom">
                    <h3 class="main-text-light">Enlaces</h3>
                    <ul class="list-unstyled">
                        <li><a href="{{ path('front_about') }}">Sobre mi</a></li>
                        {#<li><a href="{{ path('front_portafolio') }}">Portafolio</a></li>#}
                        <li><a href="{{ path('front_blog') }}">Blog</a></li>
                        <li><a href="{{ path('front_contact') }}">Contacto</a></li>
                        <li><a href="{{ path('front_credits') }}">Cr√©dito</a></li>
                    </ul>
                </div>
                <div class="col-md-3 col-xs-12 extra-m-bottom">
                    <h3 class="main-text-light">Conectar</h3>
                    <a href="https://twitter.com/wils_83" class="twitter-follow-button" data-show-count="false">Follow @wils_83</a><br>
                    <a href="https://github.com/wiglesias" target="_blank"><i class="fa fa-github fa-2x" aria-hidden="true"></i></a>
                    <a href="https://es.linkedin.com/in/wils-iglesias-3b99b940" target="_blank"><i class="fa fa-linkedin-square fa-2x" aria-hidden="true"></i></a>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container extra-m-bottom">
                <p><i class="fa fa-copyright main-text-light" aria-hidden="true"></i> 2016 - {{ "now" | date("Y") }} Wils Iglesias</p>
            </div>
        </div>
    </footer>
{% endblock %}
{#<!-- Javascripts -->#}
{% block javascripts %}
    {% javascripts '@myjs' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/app/js/typed.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/app/js/social_network.js') }}"></script>
    <script src="//www.google.com/recaptcha/api.js?hl={{ app.request.locale }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block scroll_top %}
    {#<!-- Scroll-Top effect JS -->#}
    {% include ':Frontend/includes:scroll-to-top-js.html.twig' %}
{% endblock %}
{% block analytics %}
    {#<!-- Google Analytics -->#}
    {% if google_analytics_enabled %}
        <script type="text/javascript">
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
            ga('create', '{{ google_analytics_account }}', 'auto'); ga('send', 'pageview');
        </script>
    {% endif %}
{% endblock %}
</body>
</html>
