{% extends ':Frontend:base.html.twig' %}

{% block title %}{{ post.title }} · Blog{% endblock %}

{% block main %}
    <div class="container container-main">
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-12">
                        <div class="thumbnail">
                                {% include ':Frontend/includes:image_detail.html.twig' with {object: post, filter: '1200xY'} %}
                            </a>
                            <div class="caption">
                                <h2 class="no-m-top main-title">{{ post.title }}</h2>
                                <h4 class="text-muted"><i class="fa fa-calendar c-orange-md" aria-hidden="true"></i> {{ post.publishedAt | date('d/m/Y') }}</h4>
                                {% for tag in post.tags %}
                                    {% spaceless %}
                                        <a class="c-blue-md" href="{{ path('front_blog_tag_detail', {slug: tag.slug}) }}">{{ tag.title }}</a>
                                        {% if loop.index != loop.last %}, {% endif %}
                                    {% endspaceless %}
                                {% endfor %}
                                <p class="main-text-light">{{ post.description | raw }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-sidebox grey-background">
                    <h3 class="no-m-top main-text-light">Categorías</h3>
                    <hr>
                    <div class="sidebox-content">
                        <ul class="list-unstyled categories-selector">
                            {% for tag in tags if tag.posts | length > 0 %}
                                <li><a href="{{ path('front_blog_tag_detail', {slug: tag.slug}) }}"><i class="fa fa-folder-open-o" aria-hidden="true"></i> {{ tag.title }}</a></li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <div class="blog-sidebox grey-background">
                    <h3 class="no-m main-text-light">Últimes notícias</h3>
                    <hr class="hr-divider">
                    <div class="sidebox-content">
                        <ul class="list-unstyled categories-selector">
                            {% for recent in recents %}
                                <li class="normal-m-bottom"><a href="{{ path('front_blog_detail', {slug: recent.slug, year: recent.publishedAt | date('Y'), month: recent.publishedAt | date('m'), day: recent.publishedAt | date('d')}) }}"><i class="fa fa-angle-right c-grey" aria-hidden="true"></i> {{ recent.title }}</a><br>
                                    <i class="fa fa-calendar c-grey" aria-hidden="true"></i>  {{ recent.publishedAt | date('d/m/Y') }}
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
