{% extends ':Frontend:base.html.twig' %}

{% block title %}{{ post.title }} Â· Blog{% endblock %}

{% block main %}
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="thumbnail">
                        {% include ':Frontend/includes:image_detail.html.twig' with {object: post, filter: '1200xY'} %}
                        <div class="caption">
                            <h2 class="main-title">{{ post.title }}</h2>
                            <p class="post-meta">Publicado por <a href="https://github.com/wiglesias" target="_blank">{{ post.author.fullname }}</a> en {{ post.publishedAt | date('d/m/Y') }}</p>
                            {% for tag in post.tags %}
                                {% spaceless %}
                                    <a class="c-blue-md" href="{{ path('front_blog_tag_detail', {slug: tag.slug}) }}">{{ tag.title }}</a>
                                    {% if loop.index != loop.last %}, {% endif %}
                                {% endspaceless %}
                            {% endfor %}
                            <p class="text-muted">{{ post.description | raw }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    {% include ':Frontend/includes:_side.html.twig' %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
