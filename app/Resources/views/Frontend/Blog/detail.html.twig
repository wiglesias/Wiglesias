{% extends ':Frontend:base.html.twig' %}

{% block title %}{{ post.title }} · Blog{% endblock %}

{% block main %}
    <div class="container container-main">
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-12">
                        {% include ':Frontend/includes:image_detail.html.twig' with {object: post, filter: '1200xY'} %}
                        <h2 class="main-title">{{ post.title }}</h2>
                        <h4 class="text-muted"><i class="fa fa-calendar c-orange-md" aria-hidden="true"></i> {{ post.publishedAt | date('d/m/Y') }}</h4>
                        {% for tag in post.tags %}
                            {% spaceless %}
                                <a class="c-blue-md" href="{{ path('front_blog_tag_detail', {slug: tag.slug}) }}">{{ tag.title }}</a>
                                {% if loop.index != loop.last %}, {% endif %}
                            {% endspaceless %}
                        {% endfor %}
                        <p class="main-text-light">{{ post.description | raw }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-sidebox grey-background">
                    <h3 class="no-m-top main-text-light">Categorías</h3>
                    <hr>
                    <div class="sidebox-content">
                        <ul class="list-unstyled categories-selector">
                            {% for tag in tags if tag.posts | length > 0 %}
                                <li class="main-text-light"><a href="{{ path('front_blog_tag_detail', {slug: tag.slug}) }}"><i class="fa fa-folder-open-o" aria-hidden="true"></i> {{ tag.title }}</a></li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                {% include ':Frontend/includes:_side.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}
