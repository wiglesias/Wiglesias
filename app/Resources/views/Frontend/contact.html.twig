{% extends ':Frontend:base.html.twig' %}

{% block title %}Contacto{% endblock %}

{% block main %}
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Contacto</h2>
                    <hr class="hr-divider-section">
                    <h3 class="section-subheading text-muted">Bién, cuéntame cuales son tus propuestas, ideas o necesidades para tu negocio.</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    {{ form_start(formContact) }}
                        <div class="col-sm-4 col-md-6">
                            {{ form_row(formContact.name) }}
                            {{ form_row(formContact.phone) }}
                            {{ form_row(formContact.email) }}
                        </div>
                        <div class="col-sm-8 col-md-6">
                            {% include ':Frontend/includes:notice_flash.html.twig' %}
                            {{ form_row(formContact.message) }}
                            {{ form_rest(formContact) }}
                        </div>
                    {{ form_end(formContact) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
