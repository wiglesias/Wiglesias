{% extends ':Frontend:base.html.twig' %}

{% block title %}Portafolio{% endblock %}

{% block main %}
    <section id="portfolio">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Portafolio</h2>
                    <hr class="hr-divider-section">
                    <h3 class="section-subheading text-muted">Aquí se encuentran todos mis trabajos y colaboraciones realizados con otros proyectos.</h3>
                </div>
            </div>
            <div class="row">
                {% for portfolio in allPortafolios %}
                    <div class="col-md-4 col-sm-6 portfolio-item">
                        <a href="#{{ portfolio.slug }}" class="portfolio-link" data-toggle="modal">
                            <div class="portfolio-hover">
                                <div class="portfolio-hover-content">
                                    <i class="fa fa-plus fa-3x"></i>
                                </div>
                            </div>
                            {% if portfolio.imageName is not null %}
                                <img class="img-responsive img-centered" src="{{ vich_uploader_asset(portfolio, 'imageFile') | imagine_filter('600x450') }}" alt="{{ portfolio.imageName }}">
                            {% else %}
                                <img class="img-responsive img-centered" src="{{ asset('bundles/app/img/default-portfolio.jpg') | imagine_filter('600x450') }}" alt="default site image">
                            {% endif %}
                        </a>
                        <div class="portfolio-caption">
                            <h4>{{ portfolio.title }}</h4>
                            <p class="text-muted">Desarrollo Web</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    {#<!-- Portfolio Modals -->#}
    {#<!-- Use the modals below to showcase details about your portfolio projects! -->#}

    {#<!-- Portfolio Modal 1 -->#}
    {% for portafolio in allPortafolios %}
        <div class="portfolio-modal modal fade" id="{{ portafolio.slug }}" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="close-modal" data-dismiss="modal">
                        <div class="lr">
                            <div class="rl"></div>
                        </div>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col-xs-8 col-lg-offset-2">
                                <div class="modal-body">
                                    {#<!-- Project Details Go Here -->#}
                                    <h2>{{ portafolio.title }}</h2>
                                    <p class="item-intro text-muted">Introducción al proyecto</p>
                                    {% if portafolio.imageName is not null %}
                                        <img class="img-responsive img-centered" src="{{ vich_uploader_asset(portafolio, 'imageFile') | imagine_filter('600x450') }}" alt="{{ portafolio.imageName }}">
                                    {% else %}
                                        <img class="img-responsive img-centered" src="{{ asset('bundles/app/img/default-portfolio.jpg') | imagine_filter('600x450') }}" alt="default site image">
                                    {% endif %}
                                    <p>{{ portafolio.description | raw }}</p>
                                    <ul class="list-inline">
                                        <li>Date: {{ portafolio.date | date('m/Y') }}</li>
                                        <li>Client: {{ portafolio.title }}</li>
                                        <li>Category: Desarrollo web</li>
                                    </ul>
                                    <button type="button" class="btn btn-primary btn-wi" data-dismiss="modal"><i class="fa fa-times"></i> Cerrar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}
