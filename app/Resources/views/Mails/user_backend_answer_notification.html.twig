{% extends ':Mails:base.html.twig' %}

{% block subject %}Respuesta{% endblock %}

{% block content %}
    <table class="row">
        <tbody>
        <tr>
            {#<th><img src="{{ absolute_url(asset('bundles/app/img/user_notification.jpg')) }}"></th>#}
        </tr>
        </tbody>
    </table>
    <table class="row">
        <tbody>
        <tr>
            <th class="small-12 large-12 columns first last vertical-padding">
                <table>
                    <tr>
                        <th>
                            <h4>Bienvenido {{ contact.name }},</h4>
                            <p class="grey-color">En respuesta a su pregunta:</p>
                            <p class="grey-color">{{ contact.message }}</p>
                            <p class="grey-color">Te tengo que decir que:</p>
                            <p>{{ contact.description }}</p>
                            <br>
                            <p class="grey-color">Saludos</p>
                        </th>
                        <th class="expander"></th>
                    </tr>
                </table>
            </th>
        </tr>
        </tbody>
    </table>
{% endblock %}
